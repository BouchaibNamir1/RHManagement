@model RHManagement.Models.Post

@{
    ViewData["Title"] = "Modifier le Poste";
    Layout = null;
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - RH Management</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                <img src="~/images/RH.png" alt="RH Management" height="40" class="me-2" />
                <strong>RH Management</strong>
            </a>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto gap-3">
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">🏠 Accueil</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Employees" asp-action="Index">👔 Employés</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Users" asp-action="Index">👤 Utilisateurs</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Departments" asp-action="Index">🏢 Départements</a></li>
                    <li class="nav-item"><a class="nav-link active" asp-controller="Posts" asp-action="Index">📝 Postes</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Candidates" asp-action="Index">🧑‍💼 Candidats</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- LAYOUT -->
    <div class="d-flex" style="margin-top:56px; min-height: calc(100vh - 56px);">

        <!-- SIDEBAR -->
        <div class="bg-primary text-white p-4" style="width: 280px; height: 100vh; position: fixed; top: 56px; font-size: 1.5rem; font-weight: bold;">
            <ul class="nav flex-column gap-4">
                <li><a class="nav-link text-white" asp-controller="Employees" asp-action="Index">👔 Employés</a></li>
                <li><a class="nav-link text-white" asp-controller="Users" asp-action="Index">👤 Utilisateurs</a></li>
                <li><a class="nav-link text-white" asp-controller="Departments" asp-action="Index">🏢 Départements</a></li>
                <li><a class="nav-link text-white active" asp-controller="Posts" asp-action="Index">📝 Postes</a></li>
                <li><a class="nav-link text-white" asp-controller="Candidates" asp-action="Index">🧑‍💼 Candidats</a></li>
            </ul>
        </div>

        <!-- FORMULAIRE -->
        <div class="flex-grow-1 p-5" style="margin-left: 280px;">
            <div class="card shadow-sm mx-auto" style="max-width: 700px;">
                <div class="card-header bg-warning text-white">
                    <h3 class="mb-0">✏️ Modifier le Poste</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label"></label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DepartmentId" class="form-label"></label>
                            <select asp-for="DepartmentId" class="form-select" asp-items="ViewBag.DepartmentId">
                                <option value="">-- Sélectionner un département --</option>
                            </select>
                            <span asp-validation-for="DepartmentId" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary">Sauvegarder</button>
                        <a asp-action="Index" class="btn btn-secondary">Retour</a>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- FOOTER -->
    <footer class="footer text-center py-3" style="background-color:#f8f9fa; margin-left:280px;">
        <div class="container">
            <small class="text-muted">© 2025 – RH Management | Tous droits réservés</small>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
