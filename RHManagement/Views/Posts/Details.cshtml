@model RHManagement.Models.Post

@{
    ViewData["Title"] = "Détails du Poste";
    Layout = null;
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - RH Management</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top shadow-sm" style="font-size: 1.2rem;">
        <div class="container-fluid">
            <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                <img src="~/images/RH.png" alt="RH Management" height="50" class="me-3" />
                <strong>RH Management</strong>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto gap-3">
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">🏠 Accueil</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Employees" asp-action="Index">👔 Employés</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Users" asp-action="Index">👤 Utilisateurs</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Departments" asp-action="Index">🏢 Départements</a></li>
                    <li class="nav-item"><a class="nav-link active" asp-controller="Posts" asp-action="Index">📝 Postes</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Candidates" asp-action="Index">🧑‍💼 Candidats</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- LAYOUT -->
    <div class="d-flex" style="margin-top:56px; min-height: calc(100vh - 56px);">

        <!-- SIDEBAR -->
        <div class="bg-primary text-white p-4" style="width: 300px; height: 100vh; position: fixed; top: 56px; left: 0; font-size: 1.5rem; font-weight: bold;">
            <ul class="nav flex-column gap-4">
                <li><a class="nav-link text-white" asp-controller="Employees" asp-action="Index">👔 Employés</a></li>
                <li><a class="nav-link text-white" asp-controller="Users" asp-action="Index">👤 Utilisateurs</a></li>
                <li><a class="nav-link text-white" asp-controller="Departments" asp-action="Index">🏢 Départements</a></li>
                <li><a class="nav-link text-white active" asp-controller="Posts" asp-action="Index">📝 Postes</a></li>
                <li><a class="nav-link text-white" asp-controller="Candidates" asp-action="Index">🧑‍💼 Candidats</a></li>
            </ul>
        </div>

        <!-- CONTENU CENTRAL -->
        <div class="flex-grow-1 p-5" style="margin-left: 300px;">
            <div class="card shadow-sm mx-auto" style="max-width: 700px;">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">📋 Détails du Poste</h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Titre</dt>
                        <dd class="col-sm-8">@Model.Title</dd>

                        <dt class="col-sm-4">Description</dt>
                        <dd class="col-sm-8">@Model.Description</dd>

                        <dt class="col-sm-4">Département</dt>
                        <dd class="col-sm-8">@Model.Department?.Name</dd>
                    </dl>

                    <div class="mt-4">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">Modifier</a>
                        <a asp-action="Index" class="btn btn-secondary">Retour</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- FOOTER -->
    <footer class="footer text-center py-3" style="background-color:#f8f9fa; margin-left:300px;">
        <div class="container">
            <small class="text-muted">© 2025 – RH Management | Tous droits réservés</small>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
